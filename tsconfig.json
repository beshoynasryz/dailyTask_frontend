{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,  // يسمح بالاستيراد الافتراضي
    "esModuleInterop": true                // تفعيل التوافق بين وحدات ES و CommonJS
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
