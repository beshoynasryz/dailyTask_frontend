{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",                // For React 17+ JSX Transform
    "strict": true,
    "noEmit": true,                    // Don't generate .js files
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,           // For better performance in isolated files
    "allowSyntheticDefaultImports": true, // Allow default imports from non-ES modules
    "esModuleInterop": true            // For compatibility between CommonJS and ES modules
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
